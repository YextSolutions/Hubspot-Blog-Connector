{
  "$id": "hubspotblogs_dataConnector",
  "$schema": "https://schema.yext.com/config/km/connector/v2",
  "displayName": "Hubspot Blog Data Connector",
  "entityType": "helpArticle",
  "source": {
    "sourceConfig": {
      "apiPullConfig": {
        "requestType": "GET",
        "url": "https://api.hubapi.com/cms/v3/blogs/posts",
        "authentication": {
          "apiKey": {
            "key": "hapikey",
            "value": "${{API_Key}}",
            "setAsHeader": false
          }
        },
        "paginationControl": {
          "cursorPagination": {
            "cursor": "paging.next.link",
            "cursorType": "FULL_URL",
            "detectCursorInHeader": false
          }
        },
        "headers": {},
        "queryParams": {},
        "dataFormat": "JSON"
      }
    },
    "baseSelector": {
      "type": "JSON",
      "header": "Entity Container",
      "path": "results"
    },
    "selectors": [
      {
        "type": "JSON",
        "header": "created",
        "path": "created"
      },
      {
        "type": "JSON",
        "header": "featuredImage",
        "path": "featuredImage"
      },
      {
        "type": "JSON",
        "header": "id",
        "path": "id"
      },
      {
        "type": "JSON",
        "header": "name",
        "path": "name"
      },
      {
        "type": "JSON",
        "header": "postBody",
        "path": "postBody"
      },
      {
        "type": "JSON",
        "header": "url",
        "path": "url"
      },
      {
        "type": "JSON",
        "header": "updated",
        "path": "updated"
      },
      {
        "type": "JSON",
        "header": "authorName",
        "path": "authorName"
      }
    ]
  },
  "transforms": [
    {
      "function": {
        "inputHeaders": {
          "headers": [
            "created",
            "updated"
          ]
        },
        "plugin": "formatDates",
        "function": "formatDate"
      }
    }
  ],
  "mappings": [
    {
      "field": "body",
      "header": "postBody",
      "subfieldPath": []
    },
    {
      "field": "hubspotblogs_featuredImage",
      "header": "featuredImage",
      "subfieldPath": [
        {
          "name": "url"
        }
      ]
    },
    {
      "field": "externalArticlePostDate",
      "header": "created",
      "subfieldPath": []
    },
    {
      "field": "hubspotblogs_authorName",
      "header": "authorName",
      "subfieldPath": []
    },
    {
      "field": "name",
      "header": "name",
      "subfieldPath": []
    },
    {
      "field": "entityId",
      "header": "id",
      "subfieldPath": []
    },
    {
      "field": "externalArticleUpdateDate",
      "header": "updated",
      "subfieldPath": []
    },
    {
      "field": "landingPageUrl",
      "header": "url",
      "subfieldPath": []
    }
  ],
  "scheduleConfig": {
    "customSchedule": {
      "timeZone": "America/New_York",
      "startDate": "2021-09-14",
      "startTime": "00:00",
      "frequencyType": "DAILY"
    },
    "runMode": "DEFAULT"
  }
}